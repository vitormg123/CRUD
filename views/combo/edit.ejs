<h1>Editar produto</h1>

<form action="/combo/<%= combo.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= combo.nome %>" required>
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control" id="descricao" name="descricao" value="<%= combo.descricao %>" required>
    </div>
    <div class="form-group">
        <label for="preco">Preço</label>
        <input type="number" class="form-control" id="preco" name="preco" value="<%= combo.preco %>" required>
    </div>
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="number" class="form-control" id="quantidade" name="quantidade" value="<%= combo.quantidade %>" required>
    </div>
    <div class="form-group">
        <label for="categoria_id">Categoria</label>
        <select class="form-control" id="categoria" name="categoria" required>
            <% categorias.forEach(function(categoria) { %>
                <option value="<%= categoria.id %>" <%= produto.categoria == categoria.id ? 'selected' : '' %>><%= categoria.nome %></option>
            <% }); %>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>