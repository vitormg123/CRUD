<%- include('../partials/header') %>

<h1>Lista de Vendas</h1>

<a href="/vendas/create">Nova Venda</a>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Valor</th>
            <th>Quantidade</th>
            <th>ID do Produto</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% vendas.forEach(venda => { %>
            <tr>
                <td><%= venda.id %></td>
                <td><%= venda.data.toISOString().split('T')[0] %></td>
                <td><%= venda.valor %></td>
                <td><%= venda.quantidade %></td>
                <td><%= venda.produto_id %></td>
                <td>
                    <a href="/vendas/<%= venda.id %>">Ver</a>
                    <a href="/vendas/<%= venda.id %>/edit">Editar</a>
                    <form action="/vendas/<%= venda.id %>/delete" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Deseja excluir esta venda?')">Excluir</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>
