<%- include('../partials/header') %>

<h1>Editar Venda</h1>

<form action="/vendas/<%= venda.id %>/edit" method="POST">
    <label>Data:</label>
    <input type="date" name="data" value="<%= venda.data.toISOString().split('T')[0] %>" required><br>

    <label>Valor:</label>
    <input type="number" step="0.01" name="valor" value="<%= venda.valor %>" required><br>

    <label>Quantidade:</label>
    <input type="number" name="quantidade" value="<%= venda.quantidade %>" required><br>

    <label>ID do Produto:</label>
    <input type="number" name="produto_id" value="<%= venda.produto_id %>" required><br>

    <button type="submit">Atualizar</button>
</form>

<%- include('../partials/footer') %>
