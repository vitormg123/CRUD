<h1>Cadastrar novo produto</h1>
<div class="form-box" style="max-height: 80vh; overflow-y: auto;">
  <form action="/produtos" method="POST">
      <div class="form-group">
          <label for="nome">Nome do Produto:</label>
          <input type="text" class="form-control" id="nome" name="nome" required>
      </div>
      <div class="form-group">
          <label for="descricao">Descrição:</label>
          <textarea id="descricao" class="form-control" name="descricao" required></textarea>
      </div>
      <div class="form-group">
          <label for="preco">Preço:</label>
          <input type="number" class="form-control" id="preco" name="preco" required>
      </div>
      <div class="form-group">
          <label for="quantidade">Quantidade:</label>
          <input type="number" class="form-control" id="quantidade" name="quantidade" required>
      </div>
      <div class="form-group">
          <label for="categoria">Categoria:</label>
          <select class="form-control" id="categoria" name="categoria" required>
              <% categorias.forEach(categoria => { %>
                  <option value="<%= categoria.id %>"><%= categoria.nome %></option>
              <% }) %>
          </select>
      </div>
      <button type="submit" class="btn btn-dark btn-cinza-escuro">Cadastrar</button>
  </form>
</div>

<style>
  .form-box {
    background-color: #121212; /* mesmo fundo da página */
    border: 2px solid #d35400; /* borda laranja igual ao cabeçalho */
    border-radius: 8px;
    padding: 20px;
  }
  .form-box .form-control {
    background-color: #121212;
    color: white;
    border: 1px solid #d35400;
    border-radius: 5px;
  }
  .form-box .form-control:focus {
    background-color: #121212;
    color: white;
    border-color: #e67e22;
    box-shadow: 0 0 5px #e67e22;
  }
  .form-box label {
    color: white;
    font-weight: bold;
  }
</style>
